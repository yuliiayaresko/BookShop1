@model IEnumerable<BookDomain.Model.Book>

@{
    ViewData["Title"] = "Головна сторінка";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Основні кольори з палети */
        :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
        }

        body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
        }

        .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        text-align: center;
        }

        h1 {
        color: var(--dark-brown);
        font-size: 2.5rem;
        margin-bottom: 20px;
        }

        .book-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        }

        .book-card {
        background: var(--peach);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: center;
        transition: transform 0.3s;
        }

        .book-card:hover {
        transform: scale(1.05);
        }

        .book-foto img {
        width: 100%;
        max-height: 300px; /* Менша висота */
        object-fit: contain; /* Зменшує зображення, не обрізаючи його */
        border-radius: 10px;
        background-color: white; /* Фон, щоб уникнути порожніх областей */
        padding: 10px; /* Додає простір навколо зображення */
        }

        .book-title {
        font-size: 1.4rem;
        font-weight: bold;
        color: var(--dark-brown);
        margin-top: 10px;
        }

        .book-author {
        font-size: 1.1rem;
        color: var(--purple);
        }

        .book-price {
        font-size: 1.2rem;
        color: var(--pink);
        font-weight: bold;
        }

        .book-actions {
        margin-top: 15px;
        }

        .btn {
        display: inline-block;
        padding: 8px 15px;
        margin: 5px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background 0.3s, transform 0.2s;
        }

        .btn:hover {
        transform: scale(1.1);
        }

        .btn-details {
        background-color: var(--purple);
        color: white;
        }

        .btn-edit {
        background-color: var(--pink);
        color: white;
        }

        .btn-delete {
        background-color: var(--dark-brown);
        color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Каталог книг</h1>
        <div class="book-container">
            @foreach (var book in Model)
            {
                <div class="book-card">
                    <div class="book-foto">
                        <img src="@book.ImagePath" alt="Фото книги" />
                    </div>
                    <div class="book-title">@book.Name</div>
                    <div class="book-author">@book.AuthorName</div>
                    <div class="book-price">@book.Price грн</div>
                    <form action="@Url.Action("AddToBasket", "ShoppingBaskets")" method="post" style="display:inline;">
                        <input type="hidden" name="bookId" value="@book.Id" />
                        <button type="submit" class="btn btn-cart">
                            <i class="bi bi-cart-plus"></i> Додати у кошик
                        </button>
                    </form>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="book-actions">
                           
                            <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-edit">Редагувати</a>
                            <a href="@Url.Action("Delete", "Books", new { id = book.Id })" class="btn btn-delete">Видалити</a>

                        </div>
                    }
                    <div class="book-actions">
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-details">Деталі</a>
                    </div>

                </div>
            }
        </div>
    </div>
</body>
</html>
