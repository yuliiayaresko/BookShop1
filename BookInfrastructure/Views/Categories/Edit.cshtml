@model BookDomain.Model.Category
@{
    ViewData["Title"] = "Редагування жанру";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Основні кольори з палети */
        :root {
            --dark-brown: #493129;
            --purple: #8b597b;
            --pink: #efa3a0;
            --peach: #ffdec7;
            --cream: #ffede0;
        }

        body {
            background-color: var(--cream);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: var(--dark-brown);
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        h1, h4 {
            color: var(--dark-brown);
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        hr {
            border: 1px solid var(--pink);
            margin: 20px 0;
        }

        .edit-card {
            background: var(--peach);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            color: var(--purple);
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--purple);
            border-radius: 5px;
            background-color: white;
            color: var(--dark-brown);
            font-size: 1rem;
        }

        select.form-control {
            appearance: none;
            background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='%238b597b' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3E%3Cpath d='M6 9l6 6 6-6'/%3E%3C/svg%3E");
            background-repeat: no-repeat;
            background-position: right 10px center;
            padding-right: 30px;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px 5px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            transition: background 0.3s, transform 0.2s;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                transform: scale(1.1);
            }

        .btn-primary {
            background-color: var(--pink);
            color: white;
        }

        .btn-back {
            background-color: var(--purple);
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
            transition: background 0.3s, transform 0.2s;
        }

            .btn-back:hover {
                transform: scale(1.1);
            }

        .actions {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Змінити</h1>
        <h4>Жанри</h4>
        <hr />

        <div class="edit-card">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Назва жанру</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Опис</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                

                <div class="actions">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="actions">
            <a asp-action="Index" class="btn-back">Повернутися до списку</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>