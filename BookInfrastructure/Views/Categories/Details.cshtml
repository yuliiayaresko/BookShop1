@model BookDomain.Model.Category

@{
    ViewData["Title"] = "Деталі";
}

<div class="container mt-5 text-center">
    <h1 class="text-title">Деталі жанру</h1>

    <div class="category-card p-4 shadow rounded">
        <dl class="row text-start">
            <dt class="col-sm-3">Назва жанру:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

            <dt class="col-sm-3">Опис:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>


        </dl>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-filter btn-lg">
            <i class="bi bi-arrow-left"></i> Повернутися
        </a>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit btn-lg me-3">
            <i class="bi bi-pencil"></i> Змінити
        </a>
        <a asp-action="Index" class="btn btn-filter btn-lg">
            <i class="bi bi-arrow-left"></i> Повернутися
        </a>
    </div>}
</div>

<style>
    /* Основні кольори з палети */
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
    }

    .text-title {
        color: var(--purple);
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .category-card {
        background: var(--peach);
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        padding: 20px;
    }

    .row dt {
        font-weight: bold;
        color: var(--dark-brown);
    }

    .row dd {
        color: var(--purple);
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 1.2rem;
        transition: background 0.3s, transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.1);
        }

    .btn-edit {
        background-color: var(--pink);
        color: white;
    }

    .btn-filter {
        background-color: var(--purple);
        color: white;
    }

        .btn-filter:hover {
            background-color: var(--dark-brown);
        }
</style>
