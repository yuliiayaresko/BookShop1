@model BookDomain.Model.Category

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>Жанри</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-add" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-filter">Повернутися</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Основні кольори з палети */
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
    }

    h1, h4 {
        color: var(--dark-brown);
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            color: var(--dark-brown);
            font-size: 1.1rem;
        }

        .form-group .form-control {
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid var(--peach);
        }

            .form-group .form-control:focus {
                border-color: var(--purple);
                box-shadow: 0 0 5px var(--purple);
            }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background 0.3s, transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.1);
        }

    .btn-add {
        background-color: var(--pink);
        color: white;
        padding: 12px 25px;
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .btn-filter {
        background-color: var(--purple);
        color: white;
        padding: 10px 20px;
        font-size: 1.1rem;
        text-align: center;
        text-decoration: none;
        border-radius: 8px;
    }

        .btn-filter:hover {
            background-color: var(--dark-brown);
        }
</style>
