@model IEnumerable<BookDomain.Model.Book>

@{
    ViewData["Title"] = "Каталог книг";
}

<div class="container">
    <h1>Каталог книг</h1>

    <form method="get">
        <select name="genre" id="genre" asp-items="ViewBag.Genres">
            <option value="">Усі жанри</option>
        </select>
        <button type="submit" class="btn btn-filter">Показати</button>
    </form>


    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-add">
                <i class="bi bi-plus-circle"></i> Додати книгу
            </a>
        </p>
    }

    <div class="book-container">
        @foreach (var item in Model)
        {
            <div class="book-card">
                <div class="book-foto">
                    <img src="@item.ImagePath" alt="@item.Name" onerror="this.src='/images/default-book.png'">
                </div>
                <div class="book-title">@item.Name</div>
                <div class="book-author">@item.AuthorName</div>
                <div class="book-price">@item.Price Грн</div>
                <div class="book-actions">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">Деталі</a>


                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Видалити</a>
                    }

                    <form asp-controller="ShoppingBaskets" asp-action="AddToBasket" method="post" style="display:inline;">
                        <input type="hidden" name="bookId" value="@item.Id" />
                        <button type="submit" class="btn btn-cart">
                            <i class="bi bi-cart-plus"></i> Додати у кошик
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Основні кольори */
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: var(--dark-brown);
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .book-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .book-card {
        background: var(--peach);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: center;
        transition: transform 0.3s;
    }

        .book-card:hover {
            transform: scale(1.05);
        }

    .book-foto img {
        width: 100%;
        max-height: 250px;
        object-fit: contain;
        border-radius: 10px;
        background-color: white;
        padding: 10px;
    }

    .book-title {
        font-size: 1.4rem;
        font-weight: bold;
        color: var(--dark-brown);
        margin-top: 10px;
    }

    .book-author {
        font-size: 1.1rem;
        color: var(--purple);
    }

    .book-price {
        font-size: 1.2rem;
        color: var(--pink);
        font-weight: bold;
    }

    .book-actions {
        margin-top: 15px;
    }

    .btn {
        display: inline-block;
        padding: 8px 15px;
        margin: 5px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background 0.3s, transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.1);
        }

    .btn-details {
        background-color: var(--purple);
        color: white;
    }

    .btn-edit {
        background-color: var(--pink);
        color: white;
    }

    .btn-delete {
        background-color: var(--dark-brown);
        color: white;
    }

    .btn-add {
        background-color: var(--pink);
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 8px;
    }

    .btn-filter {
        background-color: var(--purple);
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-filter:hover {
            background-color: var(--dark-brown);
        }
</style>