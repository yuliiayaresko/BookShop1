@model BookDomain.Model.Book
@{
    ViewData["Title"] = "Редагування книги";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Основні кольори з палети */
        :root {
            --dark-brown: #493129;
            --purple: #8b597b;
            --pink: #efa3a0;
            --peach: #ffdec7;
            --cream: #ffede0;
        }

        body {
            background-color: var(--cream);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: var(--dark-brown);
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        h1, h4 {
            color: var(--dark-brown);
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        hr {
            border: 1px solid var(--pink);
            margin: 20px 0;
        }

        .edit-card {
            background: var(--peach);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            color: var(--purple);
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--purple);
            border-radius: 5px;
            background-color: white;
            color: var(--dark-brown);
            font-size: 1rem;
        }

        textarea.form-control {
            min-height: 100px;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .current-image {
            text-align: center;
            margin: 10px 0;
        }

            .current-image img {
                max-width: 150px;
                max-height: 200px;
                border-radius: 10px;
                border: 2px solid var(--purple);
                padding: 5px;
                background-color: white;
            }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px 5px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            transition: background 0.3s, transform 0.2s;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                transform: scale(1.1);
            }

        .btn-primary {
            background-color: var(--pink);
            color: white;
        }

        .btn-back {
            background-color: var(--purple);
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
            transition: background 0.3s, transform 0.2s;
        }

            .btn-back:hover {
                transform: scale(1.1);
            }

        .actions {
            text-align: center;
            margin-top: 20px;
        }

        .image-file-input {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Редагування</h1>
        <h4>Книги</h4>
        <hr />

        <div class="edit-card">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Назва книги</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="form-group">
                        <label class="control-label">Поточне зображення</label>
                        <div class="current-image">
                            <img src="@Model.ImagePath" alt="Зображення книги" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label class="control-label">Оновити зображення</label>
                    <input type="file" name="ImageFile" class="form-control image-file-input" />
                </div>

                <div class="form-group">
                    <label asp-for="AuthorName" class="control-label">Автор</label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Genre" class="control-label">Жанр</label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year" class="control-label">Рік</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Опис</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Ціна</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Категорія</label>
                    <input asp-for="CategoryId" class="form-control" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="actions">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="actions">
            <a asp-action="Index" class="btn-back">Повернутися до списку</a>
            <a asp-controller="Home" asp-action="Index" class="btn-back">На головну</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>