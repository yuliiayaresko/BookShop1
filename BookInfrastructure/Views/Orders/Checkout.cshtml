@model BookDomain.Model.Order

@{
    ViewData["Title"] = "Оформлення замовлення";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2, h4 {
            color: #2c3e50;
        }

        .cart-item {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
        }

        button {
            background-color: #2c3e50;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #34495e;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Оформлення замовлення</h2>
        <p>Будь ласка, введіть дані для доставки та оплати.</p>

        <div>
            <!-- Кошик -->
            <h4>Ваш кошик</h4>
            <div>
                <p>Кількість товарів: @(Model.OrderDetails?.Count ?? 0)</p>
                @if (Model.OrderDetails != null)
                {
                    foreach (var detail in Model.OrderDetails)
                    {
                        <div class="cart-item">
                            <span>@(detail.Book?.Name ?? "Невідома книга") - @(detail.Quantity) шт.</span>
                            <span>Ціна: @((detail.Price) * (detail.Quantity )) USD</span>
                        </div>
                    }
                }
                <div class="cart-item">
                    <span>Загальна сума:</span>
                    <strong>@(Model.TotalPrice ?? 0) USD</strong>
                </div>
            </div>

            <!-- Форма замовлення -->
            <h4>Доставка та оплата</h4>
            <form asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" method="post">
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="CustomerEmail" value="@User.Identity?.Name" /> <!-- Беремо email з автентифікації -->

                <div class="form-group">
                    <label for="deliveryAddress">Адреса доставки:</label>
                    <input type="text" id="deliveryAddress" asp-for="DeliveryAddress" required />
                </div>

                <div class="form-group">
                    <label for="orderStatus">Статус замовлення:</label>
                    <select id="orderStatus" asp-for="OrderStatus" required>
                        <option value="">Оберіть статус...</option>
                        <option value="Pending">Очікує</option>
                        <option value="Processing">Обробляється</option>
                        <option value="Shipped">Відправлено</option>
                        <option value="Delivered">Доставлено</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="paymentMethod">Спосіб оплати:</label>
                    <select id="paymentMethod" name="PaymentMethod" required>
                        <option value="">Оберіть спосіб...</option>
                        <option value="Credit">Кредитна картка</option>
                        <option value="Debit">Дебетова картка</option>
                        <option value="PayPal">PayPal</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="cardName">Ім’я на картці:</label>
                    <input type="text" id="cardName" name="CardName" required />
                </div>

                <div class="form-group">
                    <label for="cardNumber">Номер картки:</label>
                    <input type="text" id="cardNumber" name="CardNumber" required />
                </div>

                <div class="form-group">
                    <label for="expiration">Термін дії (ММ/РР):</label>
                    <input type="text" id="expiration" name="Expiration" required />
                </div>

                <div class="form-group">
                    <label for="cvv">CVV:</label>
                    <input type="text" id="cvv" name="CVV" required pattern="\d{3,4}" title="Введіть 3-4 цифри" />
                </div>

                <button type="submit">Підтвердити замовлення</button>
            </form>
        </div>
    </div>
</body>
</html>