@model BookDomain.Model.Order

@{
    ViewData["Title"] = "Видалення замовлення";
}

<div class="container">
    <h1>Видалення замовлення</h1>
    <h3>Ви впевнені, що хочете видалити це замовлення?</h3>

    <div class="order-card">
        <h4>Замовлення</h4>
        <dl class="details-list">
            <dt>Дата замовлення:</dt>
            <dd>@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt>Загальна сума:</dt>
            <dd>@Html.DisplayFor(model => model.TotalPrice)</dd>

            <dt>Адреса доставки:</dt>
            <dd>@Html.DisplayFor(model => model.DeliveryAddress)</dd>

            <dt>Статус замовлення:</dt>
            <dd>@Html.DisplayFor(model => model.OrderStatus)</dd>

            <dt>ID кошика:</dt>
            <dd>@Html.DisplayFor(model => model.ShoppingBasketId)</dd>

            <dt>Покупець:</dt>
            <dd>@Html.DisplayFor(model => model.Customer.Id)</dd>
        </dl>

        <form asp-action="Delete" class="form-actions">
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="Видалити" class="btn btn-delete" />
            <a asp-action="Index" class="btn btn-details">Повернутися до списку</a>
        </form>
    </div>
</div>

<style>
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: var(--dark-brown);
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    h3 {
        color: var(--pink);
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    h4 {
        color: var(--dark-brown);
        font-size: 1.4rem;
        margin-bottom: 15px;
    }

    .order-card {
        background: var(--peach);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: left;
        max-width: 500px;
        margin: 0 auto;
    }

    .details-list {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
        font-size: 1rem;
    }

    dt {
        color: var(--purple);
        font-weight: bold;
    }

    dd {
        color: var(--dark-brown);
        margin: 0;
    }

    .form-actions {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 8px 15px;
        margin: 5px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background 0.3s, transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.1);
        }

    .btn-details {
        background-color: var(--purple);
        color: white;
    }

        .btn-details:hover {
            background-color: var(--dark-brown);
        }

    .btn-delete {
        background-color: var(--dark-brown);
        color: white;
        border: none;
        cursor: pointer;
    }

        .btn-delete:hover {
            background-color: var(--pink);
        }
</style>