@model BookDomain.Model.Order

@{
    ViewData["Title"] = "Редагування замовлення";
}

<div class="container">
    <h1>Редагування замовлення</h1>

    <div class="order-card">
        <h4>Замслнення</h4>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="error-text"></div>

            <div class="form-group">
                <label asp-for="CustomerEmail">Емейл покупця:</label>
                <select asp-for="CustomerEmail" asp-items="ViewBag.CustomerEmail"></select>
                <span asp-validation-for="CustomerEmail" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderDate">Дата замовлення:</label>
                <input asp-for="OrderDate" type="date" value="@Model.OrderDate?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="OrderDate" class="error-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice">Загальна сума:</label>
                <input asp-for="TotalPrice" type="number" step="0.01" required />
                <span asp-validation-for="TotalPrice" class="error-text"></span>
            </div>

            <!-- Додаємо нові поля -->
            <div class="form-group">
                <label asp-for="FullName">Повне ім’я:</label>
                <input asp-for="FullName" required />
                <span asp-validation-for="FullName" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryCity">Місто:</label>
                <input asp-for="DeliveryCity" required />
                <span asp-validation-for="DeliveryCity" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryStreet">Вулиця:</label>
                <input asp-for="DeliveryStreet" required />
                <span asp-validation-for="DeliveryStreet" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryHouseNumber">Номер будинку:</label>
                <input asp-for="DeliveryHouseNumber" required />
                <span asp-validation-for="DeliveryHouseNumber" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryPostalCode">Поштовий індекс:</label>
                <input asp-for="DeliveryPostalCode" required />
                <span asp-validation-for="DeliveryPostalCode" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryInstructions">Інструкції доставки:</label>
                <textarea asp-for="DeliveryInstructions"></textarea>
                <span asp-validation-for="DeliveryInstructions" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderStatus">Статус замовлення:</label>
                <input asp-for="OrderStatus" />
                <span asp-validation-for="OrderStatus" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShoppingBasketId">ID кошика:</label>
                <input asp-for="ShoppingBasketId" readonly />
                <span asp-validation-for="ShoppingBasketId" class="error-text"></span>
            </div>

            <input type="hidden" asp-for="OrderId" />

            <div class="form-actions">
                <input type="submit" value="Зберегти" class="btn btn-details" />
                <a asp-action="Index" class="btn btn-edit">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--dark-brown);
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: var(--dark-brown);
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    h4 {
        color: var(--dark-brown);
        font-size: 1.4rem;
        margin-bottom: 15px;
    }

    .order-card {
        background: var(--peach);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: left;
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-size: 1.1rem;
        color: var(--purple);
        margin-bottom: 5px;
    }

    input, select, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid var(--purple);
        border-radius: 5px;
        font-size: 1rem;
        background-color: var(--cream);
        color: var(--dark-brown);
    }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: var(--pink);
            box-shadow: 0 0 5px rgba(239, 163, 160, 0.5);
        }

    .error-text {
        color: var(--pink);
        font-size: 0.9rem;
    }

    .form-actions {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 8px 15px;
        margin: 5px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background 0.3s, transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.1);
        }

    .btn-details {
        background-color: var(--purple);
        color: white;
        border: none;
        cursor: pointer;
    }

        .btn-details:hover {
            background-color: var(--dark-brown);
        }

    .btn-edit {
        background-color: var(--pink);
        color: white;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}