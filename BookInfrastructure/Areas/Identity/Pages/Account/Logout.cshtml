@page
@model LogoutModel
@{
    ViewData["Title"] = "Вихід із системи";
}

<div class="container">
    <div class="logout-card">
        <h1>@ViewData["Title"]</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <p>Ви дійсно бажаєте вийти з системи?</p>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-logout">Підтвердити вихід</button>
                    <a href="/" class="btn btn-cancel">Скасувати</a>
                </form>
            }
            else
            {
                <div class="success-message">
                    <p>Ви успішно вийшли з системи.</p>
                    <a href="/" class="btn btn-return">Повернутися на головну</a>
                </div>
            }
        }
    </div>
</div>

<style>
    :root {
        --dark-brown: #493129;
        --purple: #8b597b;
        --pink: #efa3a0;
        --peach: #ffdec7;
        --cream: #ffede0;
    }

    body {
        background-color: var(--cream);
        font-family: 'Arial', sans-serif;
        color: var(--dark-brown);
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: var(--dark-brown);
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .logout-card {
        background: var(--peach);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 25px;
    }

    .btn {
        display: inline-block;
        padding: 12px 25px;
        margin: 0 10px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-logout {
        background-color: var(--purple);
        color: white;
    }

    .btn-cancel {
        background-color: var(--pink);
        color: var(--dark-brown);
    }

    .btn-return {
        background-color: var(--purple);
        color: white;
        margin-top: 15px;
    }

    .success-message {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>